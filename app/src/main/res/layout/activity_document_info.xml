<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocumentInfoActivity"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/tvInfoFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tvInfoLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tvInfoGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tvInfoDateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tvInfoOIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tvInfoNationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tvInfoDocumentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tvInfoDateOfExpiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/ivInfoFaceImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/front_image"/>

    <ImageView
        android:id="@+id/ivInfoFrontImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/back_image"/>

    <ImageView
        android:id="@+id/ivInfoBackImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/face_image" />

</LinearLayout>